# Production Environment Variables Template
# SECURITY WARNING: Copy this to .env.production and fill with REAL values
# NEVER commit .env.production to version control!

# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://your-domain.com

# Database Configuration - Supabase (REQUIRED)
DB_TYPE=supabase
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Redis Configuration (REQUIRED for production)
REDIS_URL=redis://your-redis-url:6379

# JWT Secrets (REQUIRED - Use strong, unique values!)
# Generate with: openssl rand -hex 64
JWT_SECRET=generate_strong_secret_key_here
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=generate_another_strong_secret_key_here
JWT_REFRESH_EXPIRE=7d

# Security Keys (REQUIRED - Generate unique values!)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=generate_32_char_encryption_key
SESSION_SECRET=generate_session_secret_key

# Google Gemini API (REQUIRED for AI features)
GEMINI_API_KEY=your_real_gemini_api_key

# Google OAuth (Optional but recommended)
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Stripe Payment (REQUIRED for payments)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_price_id

# AWS S3 Storage (REQUIRED for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_CLOUDFRONT_URL=https://your-cloudfront-url.cloudfront.net

# Email Service - SendGrid (REQUIRED for emails)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
EMAIL_FROM=noreply@your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Highly recommended)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Production Flags (DO NOT CHANGE)
MOCK_DATABASE=false
MOCK_REDIS=false
MOCK_STRIPE=false
DATABASE_SSL=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log